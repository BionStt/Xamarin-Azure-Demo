<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EShope.Views.PopupMenuView" x:Name="popupMenu" WidthRequest="100" Unfocused="PopupMenu_Unfocused">
  <ContentView.Content>
      <StackLayout BackgroundColor="LightSeaGreen">
			<Button Text="Logout" Command="{Binding LogoutCommand}"></Button>
			<Button Text="Sync" Command="{Binding RequestSyncCommand}"></Button>
			<Button Text="Home" Command="{Binding BackToHomeCommand}"></Button>
		</StackLayout>
  </ContentView.Content>
</ContentView>