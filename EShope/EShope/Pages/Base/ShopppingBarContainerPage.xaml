<?xml version="1.0" encoding="utf-8" ?>
<base:PageBase
	xmlns:base="clr-namespace:EShope.Pages.Base" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:EShope.Views"
	x:Name="shoppingBarPage"
             x:Class="EShope.Pages.Base.ShopppingBarContainerPage">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="*"></RowDefinition>
			</Grid.RowDefinitions>
			<views:ShoppingBarView></views:ShoppingBarView>
			<ContentView Grid.Row="1" Content="{Binding Source={x:Reference shoppingBarPage}, Path=ContentPlaceHolder}"
                         HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                         AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
			</ContentView>

			<ActivityIndicator x:Name="busyIndicator" 
							   Grid.Row="1"
							   IsRunning="{Binding Source={x:Reference shoppingBarPage}, Path=IsBusy}" 
							   IsVisible="{Binding Source={x:Reference shoppingBarPage}, Path=IsBusy}" 
                               AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"></ActivityIndicator>
		</Grid>

	</ContentPage.Content>
</base:PageBase>